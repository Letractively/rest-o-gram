<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/scroller"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true" >

<LinearLayout
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              style="@style/CustomDialogTheme"
              android:background="@drawable/customshape"
              android:id="@+id/popup_element">

    <TextView
            android:id="@+id/instagramInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="#000000"
            android:typeface="serif"
            android:textAlignment="center"
            android:layout_marginTop="7dp"
            android:text="Instagram Information"
            android:layout_gravity="center"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginTop="2dp"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/creationTime"
            android:layout_marginTop="5dp" >


        <ImageView
                android:id="@+id/dateIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="4dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_history"/>

        <TextView
                android:id="@+id/tvCreationTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="14dp"
                android:typeface="serif"
                android:textColor="#000000"
                android:layout_toRightOf="@+id/dateIcon"
                android:layout_alignTop="@+id/dateIcon"
                android:layout_gravity="center"/>

    </RelativeLayout>


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/userName"
            android:layout_marginTop="5dp">

        <ImageView
                android:id="@+id/userIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="4dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_user"/>


        <TextView
                android:id="@+id/tvUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="14dp"
                android:typeface="serif"
                android:textColor="#000000"
                android:layout_toRightOf="@id/userIcon"
                android:layout_alignTop="@+id/userIcon"
                android:layout_gravity="center"/>

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/likes"
            android:layout_marginTop="5dp">

        <ImageView
                android:id="@+id/likeIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="4dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_favorite_off"/>

        <TextView
                android:id="@+id/tvLikes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="14dp"
                android:typeface="serif"
                android:textColor="#000000"
                android:layout_toRightOf="@+id/likeIcon"
                android:layout_alignTop="@+id/likeIcon"
                android:layout_gravity="center"/>

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/comments"
            android:layout_marginTop="5dp">

    <!--<ImageView-->
            <!--android:id="@+id/commentIcon"-->
