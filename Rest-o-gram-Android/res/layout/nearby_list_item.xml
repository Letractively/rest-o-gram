<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

    <!--  ListRow Left sied Thumbnail image -->
    <LinearLayout android:id="@+id/thumbnail"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:padding="3dip"
                  android:layout_alignParentLeft="true"
                  android:layout_marginRight="5dip">

        <ImageView
                android:id="@+id/ivPhoto"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_rest"/>

    </LinearLayout>

    <!-- Venue Title-->
    <TextView
            android:id="@+id/tvName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#040404"
            android:typeface="sans"
            android:textSize="15dp"
            android:textStyle="bold" android:layout_toRightOf="@+id/thumbnail"/>

    <!-- Venue Address -->
    <TextView
            android:id="@+id/tvAddress"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#343434"
            android:textSize="12dip"
            android:layout_toRightOf="@+id/thumbnail" android:layout_below="@+id/tvName"/>


    <!-- Venue Phone -->
    <TextView
            android:id="@+id/tvPhone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#343434"
            android:textSize="12dip"
            android:layout_below="@+id/tvAddress" android:layout_toRightOf="@+id/thumbnail"/>


    <!-- Venue Distance -->
    <TextView
            android:id="@+id/tvDistance"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#343434"
            android:textSize="12dip"
            android:layout_below="@+id/tvPhone" android:layout_toRightOf="@+id/thumbnail"/>



</RelativeLayout>