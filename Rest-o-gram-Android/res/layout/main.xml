<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="82dp"
            android:text="Hello World, MyActivity"
            />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="32.112"
            android:id="@+id/editTextLat" android:layout_gravity="left|center_vertical"/>
    <EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="34.839"
              android:id="@+id/editTextLon"/>
    <Button
            android:layout_width="262dp"
            android:layout_height="wrap_content"
            android:text="GO!"
            android:id="@+id/button" android:clickable="true"
            android:layout_marginLeft="31dp" android:layout_gravity="left|center_vertical"
			android:onClick="onGoClicked"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Restaurant Found"
            android:id="@+id/textView" android:layout_gravity="center"/>
    <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_gravity="center" android:rowCount="1"
            android:columnCount="2">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView1" android:layout_row="0" android:layout_column="0"/>
    </GridLayout>
</LinearLayout>

