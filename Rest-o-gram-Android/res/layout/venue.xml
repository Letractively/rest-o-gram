<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@drawable/background">




    <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#FFFFFF" android:layout_marginLeft="30dp"
            android:scaleType= "center" android:layout_marginRight="30dp">



        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|top">
            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp" android:id="@+id/frameLayout">
                <ImageView
                        android:layout_width="100dp"
                        android:layout_height="140dp"
                        android:id="@+id/ivVenue"
                        android:layout_alignParentLeft="true" android:layout_marginLeft="10dp"
                        android:layout_alignParentTop="true" android:layout_marginTop="20dp"
                        android:layout_gravity="left|top"
                        android:background="#0000"
                        android:padding="1dp"/>
                <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="140dp"
                        android:id="@+id/venueInfo"
                        android:layout_alignParentLeft="true" android:layout_marginLeft="100dp"
                        android:layout_alignParentTop="true" android:layout_marginTop="0dp"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginRight="2dp">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvVenueName"
                            android:layout_marginRight="2dp"
                            android:textColor="#040404"
                            android:typeface="sans"
                            android:textSize="16dp"
                            android:layout_gravity="right|top"
                            android:textStyle="bold" android:layout_toRightOf="@+id/ivVenue"/>






                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvVenueAddress"
                            android:layout_marginRight="2dp"
                            android:layout_marginTop="53dp"
                            android:textColor="#040404"
                            android:layout_gravity="right|top"/>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvVenuePhone"
                            android:layout_marginRight="2dp"
                            android:layout_marginTop="93dp"
                            android:textColor="#040404"
                            android:layout_gravity="right|top"/>

                </FrameLayout>

                <ImageButton
                        android:id="@+id/bVenueFavorite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom"
                        android:src="@drawable/ic_favourite"/>

            </FrameLayout>
            <GridView
                    android:id="@+id/gvPhotos"
                    android:layout_width="fill_parent"
                    android:layout_height="500dp"
                    android:columnWidth="50dp"
                    android:numColumns="3"
                    android:verticalSpacing="10dp"
                    android:horizontalSpacing="10dp"
                    android:stretchMode="columnWidth"
                    android:gravity="center"
                    android:layout_below="@+id/frameLayout"/>

        </RelativeLayout>


    </FrameLayout>
</LinearLayout>