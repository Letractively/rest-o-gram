<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/background">



<FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF" android:layout_marginLeft="30dp"
            android:scaleType="center" android:layout_marginRight="30dp">

     <!--user details: photo and user name-->
    <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp" android:layout_gravity="center">


        <ImageView
                android:id="@+id/ivFBPhoto"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center|top"/>
        <TextView
                android:id="@+id/tvFBName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" android:layout_marginTop="30dp"
                android:textStyle="normal" android:typeface="monospace" android:textColor="#000000"
                android:maxLines="1"/>


    </LinearLayout>

    <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="History"
                android:id="@+id/bHistory" android:layout_gravity="center"
                android:onClick="onHistoryClicked"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Favorites"
                android:id="@+id/bFavorites" android:layout_gravity="center"
                android:onClick="onFavoritesClicked"
                android:layout_toRightOf="@+id/bHistory"/>

    </RelativeLayout>

    <ViewSwitcher
            android:id="@+id/viewSwitcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:inAnimation="@android:anim/slide_in_left" >

        <LinearLayout
                android:id="@+id/historyView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

            <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lvHistory"
                    android:cacheColorHint="#00000000"
                    android:divider="#000000"
                    android:dividerHeight="1dip"/>

        </LinearLayout>


        <LinearLayout
                android:id="@+id/favoritesView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
            <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lvFavPhotos"
                    android:cacheColorHint="#00000000"
                    android:divider="#000000"
                    android:dividerHeight="1dip"/>

            <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lvFavVenues"
                    android:cacheColorHint="#00000000"
                    android:divider="#000000"
                    android:dividerHeight="1dip"/>


        </LinearLayout>
    </ViewSwitcher>



</FrameLayout>


</LinearLayout>