<?xml version="1.0" encoding="utf-8"?>
    <selector
            xmlns:android="http://schemas.android.com/apk/res/android">

        <item android:state_pressed="true">
            <shape>
                <gradient
                        android:startColor="#1b72c3"
                        android:endColor="#1b72c3"
                        android:angle="270"/>
                <stroke
                        android:width="3dp"
                        android:color="#8b99a7" />
                <corners
                        android:radius="3dp"/>
                <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="10dp"
                        android:bottom="10dp"/>
            </shape>
        </item>

        <item android:state_focused="true">
            <shape>
                <gradient
                        android:endColor="#6f7e8d"
                        android:startColor="#6f7e8d"
                        android:angle="270"/>
                <stroke
                        android:width="3dp"
                        android:color="#8b99a7"/>
                <corners
                        android:radius="3dp"/>
                <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="10dp"
                        android:bottom="10dp"/>
            </shape>
        </item>

        <item>
            <shape>
                <gradient
                        android:endColor="#d8e9f9"
                        android:startColor="#d8e9f9"
                        android:angle="270"/>
                <stroke
                        android:width="3dp"
                        android:color="#8b99a7"/>
                <corners
                        android:radius="3dp"/>
                <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="10dp"
                        android:bottom="10dp"/>
            </shape>
        </item>
    </selector>
